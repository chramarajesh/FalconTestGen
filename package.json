{
  "name": "flowgen",
  "version": "1.0.0",
  "description": "FlowGen - React Client-Server Application",
  "main": "index.js",
  "scripts": {
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "install-server": "cd server && npm install",
    "install-all": "npm install && npm run install-client && npm run install-server",
    "build": "cd client && npm run build",
    "kill-port": "powershell -ExecutionPolicy Bypass -File ./scripts/kill-port.ps1",
    "restart": "powershell -ExecutionPolicy Bypass -File ./scripts/restart.ps1",
    "restart-client": "powershell -ExecutionPolicy Bypass -File ./scripts/restart-client.ps1",
    "restart-server": "powershell -ExecutionPolicy Bypass -File ./scripts/restart-server.ps1"
  },
  "keywords": [
    "react",
    "express",
    "tailwind"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "playwright": "^1.55.1"
  }
}
